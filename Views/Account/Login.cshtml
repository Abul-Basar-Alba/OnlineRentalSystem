@using OnlineRentalSystem.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure this matches your layout file
}

<div class="container">

    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <h3 class="text-center">Create your PIIS account</h3>
            <hr  />

            <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-control">
                <label class="control-label" for="Email">Email</label>
                <input class="form-control" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email" ></span>
            </div>

            <div class="form-control">
                <label class="control-label" for="Password">Password</label>
                <input class="form-control" asp-for="Password" type="password" />
                <span class="text-danger" asp-validation-for="Password" ></span>
            </div>

                <div class="form-group mt-2">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>

            <div class="form-control">
                <button type="submit" class="btn btn-primary">Log In</button>
            </div>

            <div class="text-center text-sm">
                <p>
                    <a asp-controller="Account" asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="font-medium text-indigo-600 hover:text-indigo-500">Register as a new user</a>
                </p>
                @* Uncomment the following if you want to enable password reset *@
                @*
                <p>
                    <a asp-controller="Account" asp-action="ForgotPassword" class="font-medium text-indigo-600 hover:text-indigo-500">Forgot your password?</a>
                </p>
                *@
            </div>
        </form>
    </div>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}